<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="stylesheet" href="/ticket.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
  </head>
  <body>
    <section class="nav__part">
      <a>tripQuest.</a>
      <div class="profile">
        <h4><%= user.firstname %> <%= user.lastname %></h4>
      </div>
    </section>
    <section class="main__part">
      <div class="ticket__body">
        <div class="ticket__left">
          <h1 class="hidden">tripQuest</h1>
          <div class="heading">
            <h3>Logo</h3>
            <h4>BOARDING PASS</h4>
          </div>
          <div class="ticket__information">
            <div class="ticket__information_bank">
              <div class="bank">
                <div class="part">
                  <div class="label">Name:</div>
                  <div class="text">
                    <%= user.firstname %> <%= user.lastname %>
                  </div>
                </div>
              </div>
              <div class="bank type__2">
                <div class="part">
                  <div class="label">From:</div>
                  <div class="text"><%= booking.departure %></div>
                </div>
                <div class="part">
                  <div class="label">Carrier:</div>
                  <div class="text"><%= booking.carrier %></div>
                </div>
              </div>
              <div class="bank type__3">
                <div class="part">
                  <div class="label">To:</div>
                  <div class="text"><%= booking.arrival %></div>
                </div>
                <div class="part">
                  <div class="label">Date:</div>
                  <div class="text"><%= booking.journeyStartDate %></div>
                </div>
                <div class="part">
                  <div class="label">Time:</div>
                  <div class="text"><%= booking.journeyStartTime %></div>
                </div>
              </div>
              <div class="bank type__3">
                <div class="part">
                  <div class="label">Flight:</div>
                  <div class="text"><%= booking.flightCode %></div>
                </div>
                <div class="part">
                  <div class="label">Gate:</div>
                  <div class="text"><%= booking.gateNo %></div>
                </div>
                <div class="part">
                  <div class="label">Board Till:</div>
                  <div class="text"><%= booking.journeyStartTime %></div>
                </div>
              </div>
            </div>
            <div class="barcode">
              <img src="/barcode.png" alt="barcode" />
            </div>
          </div>
        </div>
        <div class="ticket__right">
          <div class="heading">
            <h4>BOARDING PASS</h4>
          </div>

          <div class="right__information">
            <div class="bank">
              <div class="part">
                <div class="label">Passenger Name:</div>
                <div class="text">
                  <%= user.firstname %> <%= user.lastname %>
                </div>
              </div>
            </div>
            <div class="bank">
              <div class="part">
                <div class="label">From:</div>
                <div class="text"><%= booking.departure %></div>
              </div>
            </div>
            <div class="bank">
              <div class="part">
                <div class="label">To:</div>
                <div class="text"><%= booking.arrival %></div>
              </div>
            </div>
            <div class="bank type__2">
              <div class="part">
                <div class="label">Time:</div>
                <div class="text"><%= booking.journeyStartTime %></div>
              </div>
              <div class="part">
                <div class="label">Board Till:</div>
                <div class="text"><%= booking.journeyStartTime %></div>
              </div>
            </div>
            <div class="bank type__2">
              <div class="part">
                <div class="label">Gate:</div>
                <div class="text"><%= booking.gateNo %></div>
              </div>
              <div class="part">
                <div class="label">Flight:</div>
                <div class="text"><%= booking.flightCode %></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </body>
</html>
